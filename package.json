{
  "name": "zillow-style",
  "version": "0.0.0-monorepo",
  "private": true,
  "description": "A mostly reasonable approach to JavaScript.",
  "scripts": {
    "lint": "npm run --silent lint:js && npm run --silent lint:md",
    "lint:js": "eslint ./packages --cache --report-unused-disable-directives",
    "lint:md": "markdownlint --config linters/.markdownlint.json README.md */README.md packages/*/README.md",
    "lint:rules": "eslint-find-rules --unused packages/*",
    "pretest": "npm run --silent lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "prerelease": "npm test && npm run --silent lint:rules",
    "release": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zillow/javascript.git"
  },
  "keywords": [
    "style guide",
    "lint",
    "zillow",
    "es6",
    "es2015",
    "react",
    "jsx"
  ],
  "license": "MIT",
  "homepage": "https://github.com/zillow/javascript",
  "engines": {
    "node": ">= 8.9.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "rootDir": "packages",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.js"
    ]
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.18.1",
    "eslint-find-rules": "^3.2.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "lerna": "^3.0.0-beta.10",
    "markdownlint-cli": "^0.8.1",
    "react": ">= 0.13.0"
  },
  "dependencies": {
    "eslint-config-zillow": "file:packages/eslint-config-zillow",
    "eslint-config-zillow-base": "file:packages/eslint-config-zillow-base"
  }
}
