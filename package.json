{
  "name": "airbnb-style",
  "version": "0.0.0-monorepo",
  "private": true,
  "description": "A mostly reasonable approach to JavaScript.",
  "scripts": {
    "lint": "npm run --silent lint:js && npm run --silent lint:md",
    "lint:js": "eslint ./packages --cache --report-unused-disable-directives",
    "lint:md": "markdownlint --config linters/.markdownlint.json README.md */README.md",
    "lint:rules": "eslint-find-rules --unused packages/*",
    "pretest": "npm run --silent lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "prerelease": "npm test && npm run --silent lint:rules",
    "release": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/airbnb/javascript.git"
  },
  "keywords": [
    "style guide",
    "lint",
    "airbnb",
    "es6",
    "es2015",
    "react",
    "jsx"
  ],
  "author": "Harrison Shoff <hi@hshoff.com> (https://twitter.com/hshoff)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/airbnb/javascript/issues"
  },
  "homepage": "https://github.com/airbnb/javascript",
  "engines": {
    "node": ">= 8.9.0"
  },
  "jest": {
    "rootDir": "packages",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.js"
    ]
  },
  "devDependencies": {
    "eslint": "^4.18.1",
    "eslint-find-rules": "^3.2.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "lerna": "^3.0.0-beta.10",
    "markdownlint-cli": "^0.3.1",
    "react": ">= 0.13.0"
  }
}
